---
import DemoLayout from '@docs/layouts/DemoLayout.astro';
import { Products, getExampleImage } from '../../../src/index';
import { LinkUtil } from '../../../src/index';

const baseUrl = LinkUtil.getBaseUrl();
---

<DemoLayout title="Cosy UI 组件库 - 示例" showSidebar={false} showTOC={false}>
	<h1>Cosy UI 组件库 - 示例</h1>

	<Products
		products={[
			{
				name: '文档布局',
				image: getExampleImage({
					width: 100,
					height: 100,
				}),
				description: '适用于展示文档的场景',
				productUrl: `${baseUrl}/demos/doc_layout`,
			},
			{
				name: '产品首页',
				image: getExampleImage({
					width: 100,
					height: 100,
				}),
				description: '适用于展示产品信息的场景',
				productUrl: `${baseUrl}/demos/landing_page`,
			},
		]}
	/>
</DemoLayout>
