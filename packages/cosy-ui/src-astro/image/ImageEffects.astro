---
import Image from './Image.astro';
---

<div class="cosy:grid cosy:grid-cols-3 cosy:gap-4">
  <Image
    src="/placeholder-2.jpg"
    alt="圆角效果"
    width={200}
    height={200}
    rounded="lg"
    shadow="md"
  />

  <Image
    src="/placeholder-3.jpg"
    alt="悬停效果"
    width={200}
    height={200}
    hover="scale"
    transition="zoom"
  />

  <Image
    src="/placeholder-4.jpg"
    alt="组合效果"
    width={200}
    height={200}
    rounded="full"
    shadow="xl"
    hover="brightness"
    transition="fade"
  />
</div>
