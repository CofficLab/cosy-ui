---
import DashboardLayout from './DashboardLayout.astro';
import type { NavItem } from './types';

const navItems: NavItem[] = [
  {
    text: '仪表盘',
    href: '/dashboard',
  },
  {
    text: '用户管理',
    href: '/dashboard/users',
  },
  {
    text: '数据分析',
    href: '/dashboard/analytics',
  },
  {
    text: '系统设置',
    href: '/dashboard/settings',
  },
];

// 接收从容器组件传递的 size 参数
const size = Astro.props.size || 'md';
---

<DashboardLayout
  title={`侧边栏尺寸 - ${size.toUpperCase()}`}
  description={`展示${size.toUpperCase()}尺寸的侧边栏效果`}
  navItems={navItems}
  sidebarSize={size}
  userName="演示用户">
  <div class="cosy:space-y-6">
    <!-- 当前配置信息 -->
    <div class="cosy:card cosy:bg-base-100 cosy:shadow-sm">
      <div class="cosy:card-body">
        <h3 class="cosy:card-title">当前配置</h3>
        <div class="cosy:grid cosy:grid-cols-2 cosy:gap-4">
          <div>
            <p class="cosy:font-semibold">侧边栏尺寸</p>
            <p class="cosy:text-lg">{size.toUpperCase()}</p>
          </div>
          <div>
            <p class="cosy:font-semibold">实际宽度</p>
            <p class="cosy:text-lg">
              {size === 'sm' && '12rem (192px)'}
              {size === 'md' && '16rem (256px)'}
              {size === 'lg' && '18rem (288px)'}
              {size === 'xl' && '20rem (320px)'}
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- 适用场景说明 -->
    <div class="cosy:card cosy:bg-base-100 cosy:shadow-sm">
      <div class="cosy:card-body">
        <h3 class="cosy:card-title">适用场景</h3>
        <p>
          {size === 'sm' && '紧凑布局，移动端友好，适用于简单的导航结构'}
          {size === 'md' && '默认尺寸，平衡的选择，适用于大多数应用场景'}
          {size === 'lg' && '宽松布局，适合更多内容，可显示更详细的导航信息'}
          {size === 'xl' && '最宽布局，适合复杂导航，可容纳丰富的导航层级'}
        </p>
      </div>
    </div>
  </div>
</DashboardLayout>
