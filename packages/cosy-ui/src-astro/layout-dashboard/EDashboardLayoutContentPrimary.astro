---
import DashboardLayout from './DashboardLayout.astro';
import type { NavItem } from './types';

const navItems: NavItem[] = [
  { text: '品牌首页', href: '/dashboard' },
  { text: '营销活动', href: '/dashboard/marketing' },
  { text: '客户洞察', href: '/dashboard/insights' },
  { text: '品牌设置', href: '/dashboard/branding' },
];
---

<DashboardLayout
  title="品牌主色主题"
  description="使用企业主色调的内容容器"
  navItems={navItems}
  contentTheme="primary"
  sidebarTheme="primary"
  userName="品牌经理">
  <div class="cosy:space-y-6">
    <div
      class="cosy:alert cosy:bg-white cosy:text-primary cosy:border-primary-content">
      <span>🎨</span>
      <div>
        <h4 class="cosy:font-semibold">品牌主色主题</h4>
        <p>使用企业主色调，强化品牌识别度，提升专业形象</p>
      </div>
    </div>

    <div class="cosy:grid cosy:grid-cols-1 cosy:md:grid-cols-2 cosy:gap-6">
      <div class="cosy:card cosy:bg-white cosy:text-primary cosy:shadow">
        <div class="cosy:card-body">
          <h2 class="cosy:card-title">品牌数据</h2>
          <div
            class="cosy:stats cosy:stats-vertical cosy:bg-white cosy:text-primary">
            <div class="cosy:stat">
              <div class="cosy:stat-title cosy:text-primary cosy:opacity-70">
                品牌曝光
              </div>
              <div class="cosy:stat-value">2.6M</div>
              <div class="cosy:stat-desc cosy:text-primary cosy:opacity-70">
                本月展示次数
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="cosy:card cosy:bg-white cosy:text-primary cosy:shadow">
        <div class="cosy:card-body">
          <h2 class="cosy:card-title">互动指标</h2>
          <div
            class="cosy:stats cosy:stats-vertical cosy:bg-white cosy:text-primary">
            <div class="cosy:stat">
              <div class="cosy:stat-title cosy:text-primary cosy:opacity-70">
                用户参与
              </div>
              <div class="cosy:stat-value">89.3%</div>
              <div class="cosy:stat-desc cosy:text-primary cosy:opacity-70">
                较上月提升 12%
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="cosy:card cosy:bg-white cosy:text-primary cosy:shadow">
      <div class="cosy:card-body">
        <h2 class="cosy:card-title">品牌影响力趋势</h2>
        <div class="cosy:flex cosy:flex-wrap cosy:gap-2 cosy:mt-4">
          <div
            class="cosy:badge cosy:badge-outline cosy:border-primary-content cosy:text-primary">
            社交媒体
          </div>
          <div
            class="cosy:badge cosy:badge-outline cosy:border-primary-content cosy:text-primary">
            内容营销
          </div>
          <div
            class="cosy:badge cosy:badge-outline cosy:border-primary-content cosy:text-primary">
            品牌认知
          </div>
          <div
            class="cosy:badge cosy:badge-outline cosy:border-primary-content cosy:text-primary">
            用户留存
          </div>
        </div>
        <p class="cosy:mt-4 cosy:opacity-70">
          主色主题创造统一的品牌体验，增强视觉识别度
        </p>
      </div>
    </div>
  </div>
</DashboardLayout>

