---
import DashboardLayout from './DashboardLayout.astro';
import type { NavItem } from './types';

const navItems: NavItem[] = [
  { text: '数据概览', href: '/dashboard' },
  { text: '报表分析', href: '/dashboard/reports' },
  { text: '用户管理', href: '/dashboard/users' },
  { text: '系统设置', href: '/dashboard/settings' },
];
---

<DashboardLayout
  title="卡片容器主题"
  description="使用卡片样式的内容容器"
  navItems={navItems}
  contentTheme="card"
  userName="内容设计师">
  <div class="cosy:space-y-6">
    <div class="cosy:alert cosy:alert-info">
      <span>💡</span>
      <div>
        <h4 class="cosy:font-semibold">卡片容器主题</h4>
        <p>默认样式，提供清晰的内容边界和轻微的阴影效果，适合大多数管理界面</p>
      </div>
    </div>

    <div
      class="cosy:grid cosy:grid-cols-1 cosy:md:grid-cols-2 cosy:lg:grid-cols-3 cosy:gap-4">
      <div class="cosy:stat cosy:bg-base-200">
        <div class="cosy:stat-title">今日销售</div>
        <div class="cosy:stat-value cosy:text-primary">¥12,345</div>
        <div class="cosy:stat-desc">↗︎ 15% (较昨日)</div>
      </div>
      <div class="cosy:stat cosy:bg-base-200">
        <div class="cosy:stat-title">订单数量</div>
        <div class="cosy:stat-value cosy:text-secondary">89</div>
        <div class="cosy:stat-desc">↗︎ 8% (较昨日)</div>
      </div>
      <div class="cosy:stat cosy:bg-base-200">
        <div class="cosy:stat-title">客户满意度</div>
        <div class="cosy:stat-value cosy:text-accent">98%</div>
        <div class="cosy:stat-desc">↗︎ 3% (较上周)</div>
      </div>
    </div>

    <div class="cosy:mockup-window cosy:border cosy:bg-base-300">
      <div
        class="cosy:flex cosy:justify-center cosy:px-4 cosy:py-16 cosy:bg-base-200">
        <div class="cosy:text-center">
          <h3 class="cosy:text-lg cosy:font-semibold cosy:mb-2">
            内容预览窗口
          </h3>
          <p class="cosy:opacity-70">这是一个模拟的内容预览区域</p>
        </div>
      </div>
    </div>
  </div>
</DashboardLayout>
