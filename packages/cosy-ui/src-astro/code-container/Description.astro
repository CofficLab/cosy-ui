---
interface Props {
  text: string;
}
const { text = '' } = Astro.props;
---

{
  text && (
    <p
      class="cosy:px-6 cosy:py-2 cosy:text-sm not-prose
      cosy:bg-gradient-to-b cosy:from-blue-100/50 cosy:to-blue-100/90 
      cosy:dark:from-blue-900/20 cosy:dark:to-blue-900/20">
      {text}
    </p>
  )
}
