---
/**
 * @component CardCourseBackground
 * @description 课程卡片背景装饰组件，只接收 courseName，根据名字自动确定渐变色
 */

import { getCourseGradient } from './config';

interface Props {
  courseName: string;
}

const { courseName } = Astro.props;
const courseGradient = getCourseGradient(courseName);
---

<!-- 背景装饰动画 -->
<div
  class={`cosy:absolute cosy:inset-0 cosy:bg-gradient-to-br cosy:from-transparent cosy:via-white/5 cosy:to-transparent cosy:opacity-0 hover:cosy:opacity-100 cosy:transition-opacity cosy:duration-500 cosy:ease-out ${courseGradient}`}>
</div>

<!-- 悬停时的光效 -->
<div
  class="cosy:absolute cosy:inset-0 cosy:bg-gradient-to-r cosy:from-transparent cosy:via-white/10 cosy:to-transparent cosy:opacity-0 hover:cosy:opacity-100 cosy:transition-opacity cosy:duration-700 cosy:ease-out cosy:transform cosy:-skew-x-12 hover:cosy:translate-x-full">
</div>
