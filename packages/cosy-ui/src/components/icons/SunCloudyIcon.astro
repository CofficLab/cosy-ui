---
interface Props {
  /**
   * 图标的大小
   * @default "24px"
   */
  size?: string;
  /**
   * 图标的颜色
   * @default "currentColor"
   */
  color?: string;
  /**
   * 自定义类名
   */
  class?: string;
  /**
   * 插槽名称
   */
  slot?: string;
}

const { size = '24px', color = 'currentColor', class: className = '', slot } = Astro.props;
