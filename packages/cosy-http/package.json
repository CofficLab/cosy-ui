{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "sourceMap": true,
    "declarationMap": true
  },
  "include": [
    "src/**/*",
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}
