---
/**
 * @component EAlertVueContainer
 * @description
 * This component demonstrates the usage of the Vue-based Alert component,
 * including basic usage, with a title, different types, and custom styles.
 */
import { CodeContainer } from '@coffic/cosy-ui';
import EAlertBasic from './EAlertBasic.vue';
import EAlertWithTitle from './EAlertWithTitle.vue';
import EAlertTypes from './EAlertTypes.vue';
import EAlertCustomStyle from './EAlertCustomStyle.vue';
import EAlertBasicRaw from './EAlertBasic.vue?raw';
import EAlertWithTitleRaw from './EAlertWithTitle.vue?raw';
import EAlertTypesRaw from './EAlertTypes.vue?raw';
import EAlertCustomStyleRaw from './EAlertCustomStyle.vue?raw';
import EAlertAction from './EAlertAction.vue';
import EAlertActionRaw from './EAlertAction.vue?raw';
---

<CodeContainer
  codes={[
    EAlertBasicRaw,
    EAlertWithTitleRaw,
    EAlertTypesRaw,
    EAlertCustomStyleRaw,
    EAlertActionRaw,
  ]}
  titles={['Basic', 'With Title', 'Types', 'Custom Style', 'Action']}>
  <div id="tab-1">
    <EAlertBasic client:visible />
  </div>
  <div id="tab-2">
    <EAlertWithTitle client:visible />
  </div>
  <div id="tab-3">
    <EAlertTypes client:visible />
  </div>
  <div id="tab-4">
    <EAlertCustomStyle client:visible />
  </div>
  <div id="tab-5">
    <EAlertAction client:visible />
  </div>
</CodeContainer>
