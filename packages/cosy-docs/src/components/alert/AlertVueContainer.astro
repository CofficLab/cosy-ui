---
/**
 * @component AlertVueContainer
 * @description
 * This component demonstrates the usage of the Vue-based Alert component,
 * including basic usage, with a title, different types, and custom styles.
 */
import { CodeContainer } from '@coffic/cosy-ui';
import AlertBasic from './AlertBasic.vue';
import AlertWithTitle from './AlertWithTitle.vue';
import AlertTypes from './AlertTypes.vue';
import AlertCustomStyle from './AlertCustomStyle.vue';
import AlertBasicRaw from './AlertBasic.vue?raw';
import AlertWithTitleRaw from './AlertWithTitle.vue?raw';
import AlertTypesRaw from './AlertTypes.vue?raw';
import AlertCustomStyleRaw from './AlertCustomStyle.vue?raw';
import AlertAction from './AlertAction.vue';
import AlertActionRaw from './AlertAction.vue?raw';
---

<CodeContainer
  codes={[
    AlertBasicRaw,
    AlertWithTitleRaw,
    AlertTypesRaw,
    AlertCustomStyleRaw,
    AlertActionRaw,
  ]}
  titles={['Basic', 'With Title', 'Types', 'Custom Style', 'Action']}>
  <div id="tab-1">
    <AlertBasic client:visible />
  </div>
  <div id="tab-2">
    <AlertWithTitle client:visible />
  </div>
  <div id="tab-3">
    <AlertTypes client:visible />
  </div>
  <div id="tab-4">
    <AlertCustomStyle client:visible />
  </div>
  <div id="tab-5">
    <AlertAction client:visible />
  </div>
</CodeContainer>
