---
/**
 * @component MacWindow.WithEvents
 *
 * @description
 * 带事件处理的MacWindow组件示例，展示窗口操作事件。
 */
import { MacWindow } from '@coffic/cosy-ui/vue';
---

<MacWindow
  title="应用窗口"
  tabs={['信息', '设置', '帮助']}
  onTabClick={(tab: string) => {
    console.log('切换到标签:', tab);
  }}
  onCloseWindow={() => {
    alert('关闭窗口');
  }}
  onMinimizeWindow={() => {
    alert('最小化窗口');
  }}
  onMaximizeWindow={() => {
    alert('最大化窗口');
  }}>
  <div class="cosy:p-4">
    <div>窗口内容区域</div>
  </div>
</MacWindow>
