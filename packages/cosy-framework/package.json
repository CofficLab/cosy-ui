{
  "name": "@coffic/cosy-framework",
  "version": "0.1.0",
  "description": "A Laravel-inspired TypeScript framework with Astro and Cosy-UI integration",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./auth": "./dist/auth/index.js",
    "./view": "./dist/view/index.js",
    "./database": "./dist/database/index.js",
    "./validation": "./dist/validation/index.js",
    "./events": "./dist/events/index.js",
    "./queue": "./dist/queue/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@coffic/cosy-router": "workspace:*",
    "@coffic/cosy-interfaces": "workspace:*",
    "@coffic/cosy-middleware": "workspace:*",
    "@coffic/cosy-container": "workspace:*",
    "@coffic/cosy-config": "workspace:*",
    "@coffic/cosy-http": "workspace:*",
    "@fastify/cors": "^11.0.1",
    "fastify": "^5.4.0",
    "path-to-regexp": "^6.2.2",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@types/path-to-regexp": "^1.7.0",
    "@vitest/coverage-v8": "^1.2.2",
    "concurrently": "^9.2.0",
    "typescript": "^5.3.3",
    "vitest": "^1.6.0"
  },
  "keywords": [
    "framework",
    "typescript",
    "astro",
    "laravel",
    "web-framework",
    "cosy",
    "web",
    "http",
    "router",
    "middleware"
  ],
  "author": "coffic.cn",
  "license": "MIT",
  "peerDependencies": {
    "@coffic/cosy-container": "workspace:*",
    "@coffic/cosy-interfaces": "workspace:*",
    "@coffic/cosy-middleware": "workspace:*",
    "@coffic/cosy-config": "workspace:*"
  },
  "publishConfig": {
    "access": "public"
  }
}
