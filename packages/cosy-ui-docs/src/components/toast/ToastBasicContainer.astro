---
/**
 * @component ToastBasicContainer
 * @description Toast 基础示例的容器组件，使用 CodeContainer 的多标签系统展示不同用法
 */

import { CodeContainer } from '@coffic/cosy-ui';
import ToastTypes from './ToastTypes.astro';
import ToastDuration from './ToastDuration.astro';
import ToastControl from './ToastControl.astro';
import ToastRealWorld from './ToastRealWorld.astro';

import ToastTypesCode from './ToastTypes.astro?raw';
import ToastDurationCode from './ToastDuration.astro?raw';
import ToastControlCode from './ToastControl.astro?raw';
import ToastRealWorldCode from './ToastRealWorld.astro?raw';
---

<CodeContainer
  titles={['消息类型', '持续时间', '手动控制', '实际场景']}
  descriptions={[
    '展示四种不同类型的 Toast 通知：info、success、warning、error',
    '演示如何自定义 Toast 的显示时长，从快速提示到持久显示',
    '展示手动控制 Toast 的各种操作：显示、关闭、批量管理',
    '模拟真实应用场景：表单保存、文件上传、系统通知等',
  ]}
  codes={[
    ToastTypesCode,
    ToastDurationCode,
    ToastControlCode,
    ToastRealWorldCode,
  ]}>
  <div id="tab-1">
    <ToastTypes />
  </div>

  <div id="tab-2">
    <ToastDuration />
  </div>

  <div id="tab-3">
    <ToastControl />
  </div>

  <div id="tab-4">
    <ToastRealWorld />
  </div>
</CodeContainer>
