{
  "name": "@coffic/cosy-ui-workspace",
  "version": "0.9.0",
  "type": "module",
  "private": true,
  "description": "Cosy UI component library workspace",
  "scripts": {
    "clean": "pnpm -r clean",
    "build": "pnpm -r build",
    "build:astro": "pnpm --filter @coffic/cosy-ui build",
    "build:interfaces": "pnpm --filter @coffic/cosy-interfaces build",
    "build:router": "pnpm build:interfaces && pnpm --filter @coffic/cosy-router build",
    "build:middleware": "pnpm build:interfaces && pnpm --filter @coffic/cosy-middleware build",
    "build:container": "pnpm build:interfaces && pnpm --filter @coffic/cosy-container build",
    "build:config": "pnpm --filter @coffic/cosy-config build",
    "build:framework": "pnpm --filter @coffic/cosy-framework build",
    "build:http": "pnpm build:interfaces && pnpm --filter @coffic/cosy-http build",
    "build:logger": "pnpm build:interfaces && pnpm --filter @coffic/cosy-logger build",
    "build:docs": "pnpm build:astro && pnpm --filter @coffic/cosy-ui-docs build",
    "dev:docs": "pnpm build:astro && pnpm --filter @coffic/cosy-ui-docs dev",
    "dev:framework": "pnpm --filter @coffic/cosy-framework dev",
    "cosy:example": "pnpm --filter @coffic/cosy-framework-example cosy",
    "dev": "pnpm dev:docs",
    "preview:docs": "pnpm build:docs && pnpm --filter @coffic/cosy-ui-docs preview",
    "check": "pnpm --recursive run check",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,astro,vue,md,mdx,json}\"",
    "cosy": "npx @coffic/cosy-framework"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitest/ui": "^1.3.1",
    "eslint": "^9.15.0",
    "eslint-plugin-astro": "^1.3.1",
    "jiti": "2.4.2",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "typescript": "^5.8.3",
    "vite": "^6.0.0",
    "vitest": "^1.3.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/cosy-ui.git"
  },
  "keywords": [
    "astro",
    "component-library",
    "ui",
    "typescript",
    "tailwindcss",
    "daisyui"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "boxen": "^8.0.1",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5",
    "ora": "^8.2.0"
  }
}
