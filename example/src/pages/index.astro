---
import Layout from '../layouts/Layout.astro';
import Logo from '../assets/logo.png';
import { Footer, Header, Hero, TeamMembers } from '~';
import { Card } from '../../../index';

// 示例头像图片（使用在线占位图）
const teamMembers = [
	{
		name: "张三",
		role: "首席技术官",
		avatar: "https://api.dicebear.com/7.x/avataaars/svg?seed=Felix",
		bio: "拥有10年全栈开发经验，热衷于探索新技术，在开源社区非常活跃。",
		socialLinks: [
			{ platform: 'github' as const, url: "https://github.com" },
			{ platform: 'twitter' as const, url: "https://twitter.com" },
			{ platform: 'linkedin' as const, url: "https://linkedin.com" }
		]
	},
	{
		name: "李四",
		role: "产品设计师",
		avatar: "https://api.dicebear.com/7.x/avataaars/svg?seed=Aneka",
		bio: "专注于用户体验设计，曾参与多个知名产品的设计工作。",
		socialLinks: [
			{ platform: 'website' as const, url: "https://example.com" },
			{ platform: 'twitter' as const, url: "https://twitter.com" }
		]
	},
	{
		name: "王五",
		role: "前端工程师",
		avatar: "https://api.dicebear.com/7.x/avataaars/svg?seed=Mimi",
		bio: "React 专家，热爱开源，维护着几个流行的 npm 包。",
		socialLinks: [
			{ platform: 'github' as const, url: "https://github.com" },
			{ platform: 'email' as const, url: "mailto:example@example.com" }
		]
	}
];
---

<Layout title="Welcome to Cosy UI">
	<Header logo={Logo} />

	<main class="min-h-screen pt-24">
		<Hero
			links={[
				{ text: 'Home', href: '/' },
				{ text: 'About', href: '/about' },
			]}
			title="Welcome to Cosy UI"
			description="This is a demo of the Cosy UI library."
		/>

		<section class="container mx-auto px-4 py-16">
			<h2 class="text-3xl font-bold text-center mb-12">我们的团队</h2>
			<TeamMembers 
				members={teamMembers}
				columns={3}
			/>
		</section>

		<section class="container mx-auto p-4 space-y-8">
			<h2 class="text-2xl font-bold mb-6">卡片组件示例</h2>
			
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
				<!-- 基础卡片 -->
				<Card
					title="基础卡片"
					subtitle="这是一个简单的卡片示例"
				>
					<p class="mt-4">这里可以放置任何内容，支持完整的 Astro 组件。</p>
				</Card>

				<!-- 带图片的卡片 -->
				<Card
					title="带图片的卡片"
					subtitle="展示图片、标题和描述"
					imageUrl="https://images.unsplash.com/photo-1682686581580-d99b0230064e"
				>
					<p class="mt-4">图片会在悬浮时有放大效果，提供良好的交互体验。</p>
				</Card>

				<!-- 可点击的卡片 -->
				<Card
					title="可点击的卡片"
					subtitle="整个卡片都是可点击的"
					imageUrl="https://images.unsplash.com/photo-1682686581030-7fa4ea2b96c3"
					href="#"
				>
					<p class="mt-4">点击此卡片会触发跳转，适合作为导航元素。</p>
				</Card>
			</div>
		</section>
	</main>

	<Footer
		logo={Logo}
		siteName="Coffic"
		homeLink="/"
		icp="粤ICP备20240321号-1"
		slogan="用爱创造软件"
		company="Coffic Organization"
		copyright="Coffic"
		inspirationalSlogan="永远保持好奇心"
		socialLinks={[
			'https://github.com/cofficlab',
			'https://twitter.com/cofficlab',
			'https://linkedin.com/in/cofficlab',
		]}
		aboutLink="https://coffic.zone.id"
		contactLink="https://github.com/CofficLab/FeedbackHub"
		termsLink="https://coffic.zone.id/en/meta/terms"
		privacyLink="https://coffic.zone.id/en/meta/privacy"
		products={[
			{
				name: 'Coffic',
				href: 'https://coffic.zone.id',
				external: true,
			},
			{
				name: 'Cisum',
				href: 'https://coffic.zone.id/cisum',
				external: true,
			},
			{
				name: 'Cosy',
				href: 'https://coffic.zone.id/cosy',
				external: true,
			},
		]}
	/>
</Layout>
