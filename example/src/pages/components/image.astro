---
import Layout from '../../layouts/Layout.astro';
import { Image as ImageComponent } from '~/index';

// 导入示例图片
import exampleImage from '../../assets/logo.png';
---

<Layout title="Image Component">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">Image 组件</h1>
    
    <div class="space-y-8">
      {/* 基础用法 */}
      <section>
        <h2 class="text-2xl font-semibold mb-4">基础用法</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="space-y-4">
            <h3 class="text-lg font-medium">本地图片</h3>
            <ImageComponent
              src={exampleImage}
              alt="示例图片"
              width={400}
              height={300}
            />
          </div>
          <div class="space-y-4">
            <h3 class="text-lg font-medium">远程图片</h3>
            <ImageComponent
              src="https://picsum.photos/400/300"
              alt="随机图片"
              width={400}
              height={300}
            />
          </div>
        </div>
      </section>

      {/* 圆角和阴影 */}
      <section>
        <h2 class="text-2xl font-semibold mb-4">圆角和阴影</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="space-y-4">
            <h3 class="text-lg font-medium">圆角</h3>
            <ImageComponent
              src={exampleImage}
              alt="圆角图片"
              width={300}
              height={200}
              rounded="lg"
            />
          </div>
          <div class="space-y-4">
            <h3 class="text-lg font-medium">阴影</h3>
            <ImageComponent
              src={exampleImage}
              alt="阴影图片"
              width={300}
              height={200}
              shadow="lg"
            />
          </div>
          <div class="space-y-4">
            <h3 class="text-lg font-medium">圆角 + 阴影</h3>
            <ImageComponent
              src={exampleImage}
              alt="圆角和阴影图片"
              width={300}
              height={200}
              rounded="lg"
              shadow="lg"
            />
          </div>
        </div>
      </section>

      {/* 悬停效果 */}
      <section>
        <h2 class="text-2xl font-semibold mb-4">悬停效果</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="space-y-4">
            <h3 class="text-lg font-medium">缩放</h3>
            <ImageComponent
              src={exampleImage}
              alt="缩放效果"
              width={300}
              height={200}
              hover="scale"
              transition="zoom"
            />
          </div>
          <div class="space-y-4">
            <h3 class="text-lg font-medium">亮度</h3>
            <ImageComponent
              src={exampleImage}
              alt="亮度效果"
              width={300}
              height={200}
              hover="brightness"
              transition="fade"
            />
          </div>
          <div class="space-y-4">
            <h3 class="text-lg font-medium">模糊</h3>
            <ImageComponent
              src={exampleImage}
              alt="模糊效果"
              width={300}
              height={200}
              hover="blur"
              transition="fade"
            />
          </div>
        </div>
      </section>

      {/* 填充方式 */}
      <section>
        <h2 class="text-2xl font-semibold mb-4">填充方式</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="space-y-4">
            <h3 class="text-lg font-medium">Cover</h3>
            <div class="h-48 bg-base-200 rounded-lg overflow-hidden">
              <ImageComponent
                src={exampleImage}
                alt="Cover 填充"
                width={300}
                height={200}
                objectFit="cover"
              />
            </div>
          </div>
          <div class="space-y-4">
            <h3 class="text-lg font-medium">Contain</h3>
            <div class="h-48 bg-base-200 rounded-lg overflow-hidden">
              <ImageComponent
                src={exampleImage}
                alt="Contain 填充"
                width={300}
                height={200}
                objectFit="contain"
              />
            </div>
          </div>
          <div class="space-y-4">
            <h3 class="text-lg font-medium">Fill</h3>
            <div class="h-48 bg-base-200 rounded-lg overflow-hidden">
              <ImageComponent
                src={exampleImage}
                alt="Fill 填充"
                width={300}
                height={200}
                objectFit="fill"
              />
            </div>
          </div>
        </div>
      </section>

      {/* 加载状态 */}
      <section>
        <h2 class="text-2xl font-semibold mb-4">加载状态</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="space-y-4">
            <h3 class="text-lg font-medium">加载中</h3>
            <ImageComponent
              src="https://picsum.photos/400/300?random=1"
              alt="加载中图片"
              width={400}
              height={300}
              showPlaceholder={true}
              loading="lazy"
            />
          </div>
          <div class="space-y-4">
            <h3 class="text-lg font-medium">加载失败</h3>
            <ImageComponent
              src="https://invalid-url.com/image.jpg"
              alt="加载失败图片"
              width={400}
              height={300}
              showError={true}
            />
          </div>
        </div>
      </section>
    </div>
  </div>
</Layout> 