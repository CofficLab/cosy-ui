---
import Layout from '../../layouts/Layout.astro';
import { Footer as FooterComponent } from '@coffic/cosy-ui';
---

<Layout title="Footer 页脚 - Cosy UI">
  <div class="prose max-w-none">
    <h1>Footer 页脚</h1>
    <p>页脚组件用于展示网站的底部信息，包括版权信息、导航链接、社交媒体链接等。</p>

    <h2>基础用法</h2>
    <div class="not-prose">
      <FooterComponent
        siteName="Cosy UI"
        homeLink="/"
        slogan="一个优雅的 UI 组件库"
        company="CofficLab"
        copyright="保留所有权利"
        inspirationalSlogan="让设计更简单"
        socialLinks={[
          {
            name: "GitHub",
            url: "https://github.com",
            platform: "github"
          },
          {
            name: "Twitter",
            url: "https://twitter.com",
            platform: "twitter"
          }
        ]}
      />
    </div>

    <h2 class="mt-8">完整示例</h2>
    <div class="not-prose">
      <FooterComponent
        siteName="Cosy UI"
        homeLink="/"
        slogan="一个优雅的 UI 组件库"
        company="CofficLab"
        copyright="保留所有权利"
        inspirationalSlogan="让设计更简单"
        logo={{
          src: "https://api.dicebear.com/7.x/shapes/svg?seed=cosy",
          alt: "Cosy UI Logo"
        }}
        products={[
          {
            name: "Cosy UI",
            href: "https://github.com/cosyui",
            external: true
          },
          {
            name: "Cosy Docs",
            href: "/docs",
            external: false
          }
        ]}
        aboutLink="/about"
        contactLink="/contact"
        termsLink="/terms"
        privacyLink="/privacy"
        socialLinks={[
          {
            name: "GitHub",
            url: "https://github.com",
            platform: "github"
          },
          {
            name: "Twitter",
            url: "https://twitter.com",
            platform: "twitter"
          },
          {
            name: "LinkedIn",
            url: "https://linkedin.com",
            platform: "linkedin"
          }
        ]}
        icp="京ICP备XXXXXXXX号"
      />
    </div>

    <h2 class="mt-8">使用方法</h2>
    <pre class="language-astro"><code>{`---
import { Footer } from '~/index';

// 在你的 .astro 文件中
---

<Footer
  siteName="你的网站名称"
  homeLink="/"
  slogan="网站标语"
  company="公司名称"
  copyright="版权信息"
  inspirationalSlogan="激励标语"
  socialLinks={[
    {
      name: "GitHub",
      url: "https://github.com",
      platform: "github"
    }
  ]}
/>`}</code></pre>

    <h2 class="mt-8">API</h2>
    <div class="overflow-x-auto">
      <table class="table">
        <thead>
          <tr>
            <th>属性</th>
            <th>类型</th>
            <th>必填</th>
            <th>说明</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><code>siteName</code></td>
            <td><code>string</code></td>
            <td>是</td>
            <td>网站名称</td>
          </tr>
          <tr>
            <td><code>homeLink</code></td>
            <td><code>string</code></td>
            <td>是</td>
            <td>首页链接</td>
          </tr>
          <tr>
            <td><code>slogan</code></td>
            <td><code>string</code></td>
            <td>是</td>
            <td>网站标语</td>
          </tr>
          <tr>
            <td><code>company</code></td>
            <td><code>string</code></td>
            <td>是</td>
            <td>公司名称</td>
          </tr>
          <tr>
            <td><code>copyright</code></td>
            <td><code>string</code></td>
            <td>是</td>
            <td>版权信息</td>
          </tr>
          <tr>
            <td><code>inspirationalSlogan</code></td>
            <td><code>string</code></td>
            <td>是</td>
            <td>激励标语</td>
          </tr>
          <tr>
            <td><code>logo</code></td>
            <td><code>&#123; src: string; alt: string &#125;</code></td>
            <td>否</td>
            <td>网站 Logo</td>
          </tr>
          <tr>
            <td><code>products</code></td>
            <td><code>Array&lt;&#123; name: string; href: string; external?: boolean &#125;&gt;</code></td>
            <td>否</td>
            <td>产品列表</td>
          </tr>
          <tr>
            <td><code>aboutLink</code></td>
            <td><code>string</code></td>
            <td>否</td>
            <td>关于我们链接</td>
          </tr>
          <tr>
            <td><code>contactLink</code></td>
            <td><code>string</code></td>
            <td>否</td>
            <td>联系我们链接</td>
          </tr>
          <tr>
            <td><code>termsLink</code></td>
            <td><code>string</code></td>
            <td>否</td>
            <td>服务条款链接</td>
          </tr>
          <tr>
            <td><code>privacyLink</code></td>
            <td><code>string</code></td>
            <td>否</td>
            <td>隐私政策链接</td>
          </tr>
          <tr>
            <td><code>socialLinks</code></td>
            <td><code>Array&lt;&#123; name: string; url: string; platform: string &#125;&gt;</code></td>
            <td>否</td>
            <td>社交媒体链接</td>
          </tr>
          <tr>
            <td><code>icp</code></td>
            <td><code>string</code></td>
            <td>否</td>
            <td>ICP 备案号</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</Layout>