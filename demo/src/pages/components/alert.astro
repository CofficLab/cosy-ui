---
import Layout from '../../layouts/Layout.astro';
import { Alert as AlertComponent, CodeExample } from '@coffic/cosy-ui';
---

<Layout title="Alert 组件示例">
  <main class="container mx-auto p-4 space-y-4">
    <h1 class="text-2xl font-bold mb-6">Alert 组件示例</h1>

    <div class="space-y-8">
      <!-- 基础用法 -->
      <CodeExample 
        title="基础用法" 
        description="最简单的信息提示用法"
        code={`<Alert>
  这是一个默认的信息提示
</Alert>`}
      >
        <AlertComponent>
          这是一个默认的信息提示
        </AlertComponent>
      </CodeExample>

      <!-- 不同类型 -->
      <CodeExample 
        title="不同类型" 
        description="Alert 组件支持四种不同的类型：info、success、warning 和 error"
        code={`<Alert type="info">
  这是一条信息提示
</Alert>

<Alert type="success">
  这是一条成功提示
</Alert>

<Alert type="warning">
  这是一条警告提示
</Alert>

<Alert type="error">
  这是一条错误提示
</Alert>`}
      >
        <div class="space-y-2">
          <AlertComponent type="info">
            这是一条信息提示
          </AlertComponent>
          <AlertComponent type="success">
            这是一条成功提示
          </AlertComponent>
          <AlertComponent type="warning">
            这是一条警告提示
          </AlertComponent>
          <AlertComponent type="error">
            这是一条错误提示
          </AlertComponent>
        </div>
      </CodeExample>

      <!-- 带标题 -->
      <CodeExample 
        title="带标题的提示" 
        description="可以通过 title 属性添加标题"
        code={`<Alert type="info" title="信息提示">
  这是一条带标题的信息提示
</Alert>

<Alert type="success" title="成功提示">
  这是一条带标题的成功提示
</Alert>`}
      >
        <div class="space-y-2">
          <AlertComponent type="info" title="信息提示">
            这是一条带标题的信息提示
          </AlertComponent>
          <AlertComponent type="success" title="成功提示">
            这是一条带标题的成功提示
          </AlertComponent>
        </div>
      </CodeExample>

      <!-- 可关闭 -->
      <CodeExample 
        title="可关闭的提示" 
        description="设置 closeable 属性可以让提示框可关闭"
        code={`<Alert type="warning" title="警告提示" closeable>
  这是一条可以关闭的警告提示
</Alert>`}
      >
        <AlertComponent type="warning" title="警告提示" closeable>
          这是一条可以关闭的警告提示
        </AlertComponent>
      </CodeExample>

      <!-- 自动关闭 -->
      <CodeExample 
        title="自动关闭" 
        description="设置 autoClose 属性（毫秒）可以让提示框在指定时间后自动关闭"
        code={`<Alert type="success" title="自动关闭" autoClose={5000}>
  这条提示将在 5 秒后自动关闭
</Alert>`}
      >
        <AlertComponent type="success" title="自动关闭" autoClose={5000}>
          这条提示将在 5 秒后自动关闭
        </AlertComponent>
      </CodeExample>

      <!-- 自定义样式 -->
      <CodeExample 
        title="自定义样式" 
        description="可以通过 class 属性添加自定义样式"
        code={`<Alert type="info" class="shadow-lg">
  这是一个带阴影的提示框
</Alert>`}
      >
        <AlertComponent type="info" class="shadow-lg">
          这是一个带阴影的提示框
        </AlertComponent>
      </CodeExample>
    </div>
  </main>
</Layout> 
