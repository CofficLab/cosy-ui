---
import Layout from '../../layouts/Layout.astro';
import { Heading as HeadingComponent, CodeExample } from '@coffic/cosy-ui';
---

<Layout title="Heading 组件示例">
  <main class="container mx-auto p-4 space-y-4">
    <h1 class="text-2xl font-bold mb-6">Heading 组件示例</h1>

    <div class="space-y-8">
      <!-- 基础用法 -->
      <CodeExample 
        title="基础用法" 
        description="不同级别的标题"
        code={`<Heading level={1}>这是一个一级标题</Heading>

<Heading level={2}>这是一个二级标题</Heading>

<Heading level={3}>这是一个三级标题</Heading>

<Heading level={4}>这是一个四级标题</Heading>

<Heading level={5}>这是一个五级标题</Heading>

<Heading level={6}>这是一个六级标题</Heading>`}
      >
        <div class="space-y-2">
          <HeadingComponent level={1}>这是一个一级标题</HeadingComponent>
          <HeadingComponent level={2}>这是一个二级标题</HeadingComponent>
          <HeadingComponent level={3}>这是一个三级标题</HeadingComponent>
          <HeadingComponent level={4}>这是一个四级标题</HeadingComponent>
          <HeadingComponent level={5}>这是一个五级标题</HeadingComponent>
          <HeadingComponent level={6}>这是一个六级标题</HeadingComponent>
        </div>
      </CodeExample>

      <!-- 不同颜色 -->
      <CodeExample 
        title="不同颜色" 
        description="Heading 组件支持多种颜色选项"
        code={`<Heading level={2} color="default">默认颜色标题</Heading>

<Heading level={2} color="primary">主要颜色标题</Heading>

<Heading level={2} color="secondary">次要颜色标题</Heading>

<Heading level={2} color="accent">强调色标题</Heading>

<Heading level={2} color="muted">柔和色标题</Heading>`}
      >
        <div class="space-y-2">
          <HeadingComponent level={2} color="default">默认颜色标题</HeadingComponent>
          <HeadingComponent level={2} color="primary">主要颜色标题</HeadingComponent>
          <HeadingComponent level={2} color="secondary">次要颜色标题</HeadingComponent>
          <HeadingComponent level={2} color="accent">强调色标题</HeadingComponent>
          <HeadingComponent level={2} color="muted">柔和色标题</HeadingComponent>
        </div>
      </CodeExample>

      <!-- 对齐方式 -->
      <CodeExample 
        title="对齐方式" 
        description="可以设置标题的对齐方式"
        code={`<Heading level={2} align="left">左对齐标题</Heading>

<Heading level={2} align="center">居中对齐标题</Heading>

<Heading level={2} align="right">右对齐标题</Heading>`}
      >
        <div class="space-y-2">
          <HeadingComponent level={2} align="left">左对齐标题</HeadingComponent>
          <HeadingComponent level={2} align="center">居中对齐标题</HeadingComponent>
          <HeadingComponent level={2} align="right">右对齐标题</HeadingComponent>
        </div>
      </CodeExample>

      <!-- 下划线 -->
      <CodeExample 
        title="带下划线的标题" 
        description="可以添加下划线增强视觉层次"
        code={`<Heading level={2} underline>带下划线的标题</Heading>`}
      >
        <HeadingComponent level={2} underline>带下划线的标题</HeadingComponent>
      </CodeExample>

      <!-- 锚点链接 -->
      <CodeExample 
        title="带锚点链接的标题" 
        description="添加锚点链接，方便页面内导航"
        code={`<Heading level={2} id="section-1" anchor>带锚点链接的标题</Heading>`}
      >
        <HeadingComponent level={2} id="section-1" anchor>带锚点链接的标题</HeadingComponent>
      </CodeExample>

      <!-- 自定义样式 -->
      <CodeExample 
        title="自定义样式" 
        description="可以通过 class 属性添加自定义样式"
        code={`<Heading level={2} class="shadow-sm p-4 bg-gray-50 rounded-lg">自定义样式的标题</Heading>`}
      >
        <HeadingComponent level={2} class="shadow-sm p-4 bg-gray-50 rounded-lg">自定义样式的标题</HeadingComponent>
      </CodeExample>
    </div>
  </main>
</Layout> 